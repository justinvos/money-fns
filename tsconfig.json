{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "bin",
    "rootDir": "src",
    "target": "esnext",
    "lib": ["es2017"],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.js"
  ]
}